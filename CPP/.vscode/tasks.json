{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run",
			"type": "shell",
			"command": "clang++",
			"args": [
				"${file}",
				"-std=c++17",
				"-I/opt/local/include",
				"-o${fileBasenameNoExtension}",
				"&&",
				"./${fileBasenameNoExtension}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}